@{
  Layout = "_Layout";
}

<h3>Here are all the Clients for this Stylist: @Model["stylist"].GetName()</h3>


@if (@Model.Count != 0)
{
  <ul>
  @foreach (var client in @Model["clients"])
  {
    <li>@client.GetName()</li>
  }
  </ul>
}

<h4>Add a specialty to this stylist:</h4>

<ul>
  @foreach (var specialty in @Model["specialties"])
  {
    <li>@specialty.GetName()</li>
  }
</ul>

<form action='stylist/@Model["stylist"].GetId()/specialties/new' method='post'>
  <label for='specialtyId'>Select a specialty</label>
  <select id='specialtyId' name='specialtyId' type='text'>
    @foreach (var specialty in @Model["allSpecialties"])
    {
      <option value='@specialty.GetId()'>@specialty.GetName()</option>
    }
  </select>
  <button type='submit'>Add</button>
</form>


<p><a href='/stylists/@Model["stylist"].GetId()/clients/new'>Add a New Client</a></p>
<p><a href='/stylists'>Return to Stylists Page</a></p>
<p><a href='/'>Return to Main Page</a></p>
<p><a href="/specialties/new">Add a Specialty</a></p>
<form action='/stylists/@Model["stylist"].GetId()/clients/delete' method="post">
  <button class="btn btn-danger"type="submit" name="delete">Delete ALL Clients</button>
</form>
