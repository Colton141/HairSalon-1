@{
  Layout = "_Layout";
}

<h1>Hair Salon</h1>
<hr>

<h2>Edit stylist: @Model["stylist"].GetName()</h2>

<form action="/stylists/@Model["stylist"].GetId()" method="post">
<label for="newName">Name:</label>
<input type="text" name="newName" value="@Model["stylist"].GetName()">
<button type="submit">Edit</button>
</form>

<h4><a href="/stylists">Return Stylist page</a></h4>
